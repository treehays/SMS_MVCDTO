@using SMS_MVCDTO.Models.DTOs.AttendantDTOs;
@model IEnumerable<AttendantResponseModel>

@{
    ViewData["Title"] = "Dashboard";
}
@{
    if (TempData["Success"] != null)
    {
        <h2>@TempData["success"]</h2>
    }
    if (TempData["failed"] != null)
    {
        <h2>@TempData["failed"]</h2>
    }
}

<h1>Index</h1>

<div class="container1">

    <div class="box box2">
        <p> Search by ID</p>
        <form asp-action="GetByStaffId">
            <input type="search" placeholder="Enter Staff Id" aria-label="Search" name="staffId">
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="box box3">
        <p> Search by Email</p>
        <form asp-controller="Attendant" asp-action="GetByEmail">
            <input type="text" placeholder="Enter staff email.." name="email">
            <button type="submit">Search</button>
        </form>
    </div>
    <div class="box box4">
        <p> Search by Name</p>
        <form asp-action="GetByName">
            <input type="text" placeholder="Enter staff name.." name="name">
            <button type="submit">Search</button>
        </form>
    </div>

</div>



<div class="container">

    <div class="box box1"> side bar </div>
</div>



<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-info">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data.StaffId)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Data.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.LastName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Data.Gender)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Data.UserRole)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.StaffId)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.LastName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.Gender)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.UserRole)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-staffId="@item.Data.StaffId">Edit</a> |
                    <a asp-action="Details" asp-route-staffId="@item.Data.StaffId">Details</a> |
                    <a asp-action="DeletePreview" asp-route-staffId="@item.Data.StaffId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



