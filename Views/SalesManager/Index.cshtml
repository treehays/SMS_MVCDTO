@model IEnumerable<SMS_MVCDTO.Models.DTOs.SalesManagerDTOs.SalesManagerResponseModel>

@{
    ViewData["Title"] = "Index";
}
@{
    ViewData["Title"] = "Create";
    if (TempData["Success"] != null)
    {
        <h2>@TempData["success"]</h2>
    }
    if (TempData["failed"] != null)
    {
        <h2>@TempData["failed"]</h2>
    }
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-info">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Data.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.StaffId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.HomeAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.ResidentialAddress)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Data.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.MaritalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.userRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.BankAccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.GuarantorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data.GuarantorPhoneNumber)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.StaffId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.HomeAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.ResidentialAddress)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.MaritalStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.userRole)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.BankAccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.BankName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.GuarantorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.GuarantorPhoneNumber)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-staffId="@item.Data.StaffId">Edit</a> |
                    <a asp-action="Details" asp-route-staffId="@item.Data.StaffId">Details</a> |
                    <a asp-action="DeletePreview" asp-route-staffId="@item.Data.StaffId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

