@model SMS_MVCDTO.Models.DTOs.UserDTOs.LoginRequestModel
<!-- Design by foolishdeveloper.com -->
@{
    ViewData["Title"] = "Login Page";
}

<div class="col-md-3">
    @using (Html.BeginForm("Login", "Home"))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.StaffId, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.StaffId, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.StaffId,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password, new {@class = "control-label"})
            @Html.TextBoxFor(x => x.Password, new {@class = "form-control"})
            @Html.ValidationMessageFor(x => x.Password,"", new {@class="text-danger"})
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success">Login</button>  || <a asp-controller ="Home" asp-action = "resetPasswprd" class="btn btn-danger"> Forget Password</a>
        </div>

    }
</div>













